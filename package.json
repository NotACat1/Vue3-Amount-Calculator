{
  "name": "vue3-amount-calculator",
  "version": "0.1.0",
  "private": true,
  "description": "Vue3-Amount-Calculator is a mini-application built with Vue 3 and TypeScript, featuring three interconnected fields (price, quantity, and amount) that automatically recalculate when any of them changes. The data can be sent to a mock backend, and the operation result is logged and stored in localStorage. The app displays current values, event history, and simulates server interaction with delays and conditional success/failure responses.",
  "homepage": "https://notacat1.github.io/Vite-Vue-Pinata/",
  "repository": {
    "type": "git",
    "url": "https://github.com/NotACat1/Vite-Vue-Pinata"
  },
  "keywords": [
    "Vue",
    "Vue Router",
    "Bootstrap",
    "TypeScript",
    "Husky",
    "ESLint",
    "Editor",
    "Prettier",
    "Stylelint",
    "Commitlint",
    "Lint-staged",
    "CZ",
    "Vite",
    "Vitest",
    "Playwright"
  ],
  "author": "NotACat1",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NotACat1/Vite-Vue-Pinata/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "gh-pages -d dist",
    "predeploy": "npm run build",
    "test:unit": "vitest run",
    "test:unit:ui": "vitest run --browser",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "husky": "husky install",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.cjs"
    }
  },
  "dependencies": {
